<!DOCTYPE html>
<html>
<head>
    <title>Order List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
        .pending-table {
            background-color: #f5f5f5;
        }
        .accepted-table {
            background-color: #c3e6cb;
        }
        .declined-table {
            background-color: #f8d7da;
        }
        .navbar {
            background-color: #333333;
        }
        .navbar a {
            color: white;
        }
        .navbar a.logout {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/mydevices">My Devices</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/orders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Addproduct.html">Add Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ListProdAd">Products</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link logout" href="/Log-out">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    
    <div class="container">
        <h2>Pending Lecturers Orders</h2>
        <table class="table table-bordered pending-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Owner</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.filter(function(order) { return order.status === 'pending' && order.user_roll === 'Lecture'; }).forEach(function(order) { %>
                    <tr>
                        <td><%= order.product_id %></td>
                        <td><%= order.product_name %></td>
                        <td><%= order.startDate ? order.startDate.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric' }) : 'N/A' %></td>
                        <td><%= order.endDate ? order.endDate.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric' }) : 'N/A' %></td>
                        <td><%= order.user_name %></td>
                        <td><%= order.amount %></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <form class="btn-group" action="/AcceptOrder" method="POST">
                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                    <input class="btn btn-primary" type="submit" value="Accept">
                                </form>
                                <form class="btn-group" action="/DeclineOrder" method="POST">
                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                    <input class="btn btn-danger" type="submit" value="Decline">
                                </form>
                            </div>
                        </td>                        
                    </tr>
                    <% }); %>
                </tbody>
        </table>

        <h2>Pending Students Orders</h2>
        <table class="table table-bordered pending-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Owner</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.filter(function(order) { return order.status === 'pending' && order.user_roll === 'Student'; }).forEach(function(order) { %>
                    <tr>
                        <td><%= order.product_id %></td>
                        <td><%= order.product_name %></td>
                        <td><%= order.startDate ? order.startDate.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric' }) : 'N/A' %></td>
                        <td><%= order.endDate ? order.endDate.toLocaleString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric' }) : 'N/A' %></td>
                        <td><%= order.user_name %></td>
                        <td><%= order.amount %></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <form class="btn-group" action="/AcceptOrder" method="POST">
                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                    <input class="btn btn-primary" type="submit" value="Accept">
                                </form>
                                <form class="btn-group" action="/DeclineOrder" method="POST">
                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                    <input class="btn btn-danger" type="submit" value="Decline">
                                </form>
                            </div>
                        </td>                        
                    </tr>
                    <% }); %>
