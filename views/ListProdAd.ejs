<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-family: Arial, sans-serif;
            background-image: url("images/r.png");
            background-size: cover;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        table {
            border-collapse: collapse;
            width: 80%;
            margin-top: 20px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .navbar {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .navbar a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

        .navbar a:hover {
            color: #555;
        }

        form {
            display: inline-block;
        }

        input[type="submit"] {
            padding: 6px 12px;
            background-color: #4caf50;
            border: none;
            color: #fff;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/profile">Profile</a>
        <a href="/mydevices">My Devices</a>
        <a href="/orders">Orders</a>
        <a href="/Addproduct.html">Add Product</a>
        <a href="/Log-out">Logout</a>
    </div>
    <h1>All Devices</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Available</th>
            <th>Action</th>
        </tr>
        <% products.forEach(function(product) { %>
            <tr>
                <td><%= product.Name %></td>
                <td><%= product.availableAmount %> / <%= product.totalAmount %></td>
                <td>
                    <form action="/Pick" method="POST">
                        <input type="hidden" name="productId" value="<%= product.Id %>">
                        <input type="submit" value="Broken">
                    </form>
                    <form action="/Delete" method="POST">
                        <input type="hidden" name="productId" value="<%= product.Id %>">
                        <input style="background-color: red;" type="submit" value="Delete">
                    </form>
                </td>
            </tr>
            
        <% }); %>
    </table>
    <h3> Count Of Availbe products : <%= count %> </h3>
</body>
</html>
