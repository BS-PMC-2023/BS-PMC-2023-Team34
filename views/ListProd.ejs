<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        table {
            border-collapse: collapse;
            width: 80%;
            margin: 20px auto;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .navbar {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .navbar a {
            margin: 0 10px;
            text-decoration: none;
            color: #fff;
            font-weight: bold;
        }

        .navbar a:hover {
            color: #ddd;
        }

        form {
            display: inline-block;
        }

        input[type="submit"] {
            padding: 8px 16px;
            background-color: #4caf50;
            border: none;
            color: #fff;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .datetime-input {
            display: inline-block;

            margin: 5px;
        }

        .datetime-input label {
            margin-right: 10px;
            font-weight: bold;
        }

        .datetime-input input[type="datetime-local"] {
            padding: 6px 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: border-color 0.3s ease;
        }

        .datetime-input input[type="datetime-local"]:focus {
            outline: none;
            border-color: #4caf50;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <% if (user.Roll === 'Lecture') { %>
        <a href="/Profile-Service1">Profile</a>
        <% } else { %>
        <a href="/profile-cos">Profile</a>
        <% } %>
        <a href="/">Home</a>
        <a href="/mydevices">My Devices</a>
        <a href="/Log-out">Logout</a>
    </div>
    <h1>Available Products</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
        <% products.forEach(function(product) { %>
            <tr>
                <td><%= product.Id %></td>
                <td><%= product.Name %></td>
                <td><%= product.Amount %></td>
                <td>
                    <form action="/Pick" method="POST">
                        <input type="hidden" name="productId" value="<%= product.Id %>">
                        <input type="submit" value="Pick">
                        <div class="datetime-input">
                            <input type="datetime-local" id="datetime-<%= product.Id %>" name="datetime-<%= product.Id %>">
                        </div>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
